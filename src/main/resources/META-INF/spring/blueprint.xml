    xmlns:osgi="http://www.eclipse.org/gemini/blueprint/schema/blueprint"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                        http://www.eclipse.org/gemini/blueprint/schema/blueprint
                        http://www.eclipse.org/gemini/blueprint/schema/blueprint/gemini-blueprint.xsd">

    <import resource="classpath*:META-INF/motech/*.xml" />

    <osgi:service ref="authorService" interface="org.motechproject.sample.service.AuthorService" />

    <osgi:reference id="authorDataService" interface="org.motechproject.sample.repository.AuthorDataService" />
    <osgi:reference id="bookDataService" interface="org.motechproject.sample.repository.BookDataService" />
    <osgi:reference id="nomDePlumeDataService" interface="org.motechproject.sample.repository.NomDePlumeDataService" />

    <osgi:reference id="agentDataService" interface="org.motechproject.sample.repository.SpyDataService" />
    <osgi:reference id="secretDataService" interface="org.motechproject.sample.repository.SecretDataService" />

</beans>
